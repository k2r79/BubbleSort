<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.XYChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="fr.epsi.tri_bulle.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <VBox GridPane.rowIndex="0">
        <HBox>
            <Button fx:id="start" text="Start" onAction="#start"/>
            <Button fx:id="stop" text="Stop" onAction="#stop"/>
        </HBox>
    </VBox>
    <VBox fx:id="progressVBox" GridPane.rowIndex="1">
        <ProgressIndicator fx:id="progressIndicator" progress="0"/>
    </VBox>

</GridPane>